<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="340dp"
    android:orientation="vertical"
    android:layout_height="400dp"
    android:layout_gravity="center"
    android:background="#454545"
    android:padding="5dp"
    tools:context="com.example.monir.bdayreminder.EditPopupWindow">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:textSize="25sp"
        android:text="Edit Friend's Information"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/popupname"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:textColorHint="#fff"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/popupEditName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Your Friend's Name"
                android:textSize="20sp"
                android:paddingLeft="10dp"
                />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/popupbday"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:textColorHint="#fff"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/popupEditBday"
                android:hint="Enter His/Her Birthday"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:gravity="center"
        android:layout_marginTop="15dp">

        <Button
            android:id="@+id/popupcancleButton"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:background="#E74C3C"
            android:text="Cancle"/>
        <Button
            android:id="@+id/popupsaveButton"
            android:layout_weight="2"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:background="#58D68D  "
            android:layout_height="wrap_content"
            android:text="save changes"/>

    </LinearLayout>



</LinearLayout>
